{
    "geminicodeassist.chat.automaticScrolling": true,
    "geminicodeassist.chat.enableStreaming": true,
    "geminicodeassist.contextExclusionGitignore": true,
    "editor.inlineSuggest.enabled": false,
    // --- INICIO DE CAMBIOS ---
    // Desactiva el menú de sugerencias que aparece al escribir
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    // Desactiva la aparición de sugerencias al usar caracteres como '.' o '('
    "editor.suggestOnTriggerCharacters": false,
    "geminicodeassist.inlineSuggestions.enableAuto": false
    // --- FIN DE CAMBIOS ---
}